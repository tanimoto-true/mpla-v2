<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/stylesheets/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/stylesheets/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <title>user</title>
    <style>
        .err{
            color : red;
        }
        header{
            margin: 100px 20px 80px;
            text-align: center;
            border-bottom: 1px solid #e1e1e1;
        }
        .submit-button{
            margin: 10px 20px 10px;
            border-top: 1px solid #e1e1e1;
        }
        ul {
            list-style:none;
        }
    </style>
</head>
<body>
<header>
<h2>Sign up</h2>
</header>
<div class="container">
    <%- include('../../views/common/nav_bar'); %>
    <div class="row">
        <div class="col-xs-9 col-xs-offset-2">
            <form action="./register" method="post">
                <div>
                    <ul>
                        <div><h3 class="lead">input followings and click next</h3></div>
                        <li>mail address<input type="text" name="user" class="form-control"></li><br>

                        <% if(typeof mail_err !== "undefined"){ %><span class="err"><%= mail_err %></span><br><% } %>
                        <% if(typeof duplicated !== "undefined"){ %><span class="err"><%= duplicated %></span><br><% } %>

                        <li>password<input type="password" name="pw" class="form-control"></li><br>

                        <% if(typeof pw_length !== "undefined"){ %><span class="err"><%= pw_length %></span><br><% } %>
                        <% if(typeof pw_format !== "undefined"){ %><span class="err"><%= pw_format %></span><br><% } %>

                        <div><input type="submit" value="next" class="btn btn-lg btn-primary center-block submit-button"></div>
                    </ul>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
