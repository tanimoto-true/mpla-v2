<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/stylesheets/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/stylesheets/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <title>login</title>
    <style>
        header{
            margin: 100px 20px 80px;
            text-align: center;
            border-bottom: 1px solid #e1e1e1;
        }
        ul {
            list-style:none;
        }
        .err{
            color: red;
        }
    </style>
</head>
<body>

<header>
    <h2>Login page</h2>
</header>

<%- include('../common/nav_bar'); %>
<form action="/login" method="post">
    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div>Email<input type="text" name="email" value="<% if(typeof user_id !== "undefined"){ %><%= user_id %><% } %>" class="form-control"></div><br>
                <% if(typeof error.email !== "undefined"){ %><p class="text-center err"><%= error.email %></p><% } %>
                <div>Password<input type="password" name="pw" class="form-control"></div><br>
                <% if(typeof error.password !== "undefined"){ %><p class="text-center err"><%= error.password %></p><% } %>
                <% if(typeof error.fail !== "undefined"){ %><p class="text-center err"><%= error.fail %></p><% } %>
                <div><input type="submit" value="Login" class="btn btn-lg btn-primary"></div><br>
                <div><a href="register">Go to sign up page</a></div>
            </div>
        </div>
    </div>
</form>
</body>
</html>
