<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/stylesheets/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/stylesheets/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <title>login</title>
    <style>
        header{
            margin: 100px 20px 80px;
            text-align: center;
            border-bottom: 1px solid #e1e1e1;
        }
        ul {
            list-style:none;
        }
        .err{
            color: red;
        }
    </style>
</head>
<body>
<header>
    <h2>Login page</h2>
</header>
<form action="/login" method="post">
    <div class="container">
        <%- include('../common/nav_bar'); %>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div>Mail address<input type="text" name="id" value="<% if(typeof id !== "undefined"){ %><%= id%><% } %>" class="form-control"></div><br>
                <div>Password<input type="password" name="pw" class="form-control"></div><br>
                <% if(typeof error !== "undefined"){ %><p class="text-center err"><%= error%></p><% } %>
                <div><input type="submit" value="Login" class="btn btn-lg btn-primary"></div><br>
                <div><a href="register">Go to sign up page</a></div>
            </div>
        </div>
    </div>
</form>
</body>
</html>
