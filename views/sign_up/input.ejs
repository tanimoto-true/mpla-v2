<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/stylesheets/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/stylesheets/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <title>user</title>
    <style>
        .err{
            color : red;
        }
        header{
            margin: 100px 20px 80px;
            text-align: center;
            border-bottom: 1px solid #e1e1e1;
        }
        ul {
            list-style:none;
        }
        .lead {
            font-size: 20px;
            font-weight: 300;
        }
    </style>
</head>
<body>
<%- include('../../views/common/nav_bar'); %>
<header>
<h2>Sign up</h2>
</header>
<div class="container">
    <div class="row">
        <div class="col-xs-8 col-sm-7 col-xs-offset-2 col-sm-offset-3">
            <div><h3 class="lead">Fill followings and click next</h3></div>
            <form class="form-horizontal" action="./sign_up" method="post">

                <div class="form-group">
                    <label class="control-label" for="user">User name</label>
                    <input type="text" id="user" class="form-control" name="user" placeholder="user name" value="<% if(typeof input.user !== "undefined"){ %><%= input.user %><% } %>">
                    <% if( error.user !== ""){ %><span class="err"><%= error.user %></span><br><% } %>
                </div>

                <div class="form-group">
                    <label class="control-label" for="email">Email</label>
                    <input type="text" id="user" class="form-control" name="email" placeholder="email" value="<% if(typeof input.email !== "undefined"){ %><%= input.email %><% } %>">
                    <% if( error.email !== ""){ %><span class="err"><%= error.email %></span><br><% } %>
                </div>

                <div class="form-group">
                    <label class="control-label" for="pass">Password</label>
                    <input type="password" id="pass" name="pw" class="form-control" placeholder="password">
                    <% if( error.pw !== ""){ %><span class="err"><%= error.pw %></span><br><% } %>
                </div>
                <br>
                <div class="form-group">
                    <div><input type="submit" value="next" class="btn btn-lg btn-primary col-sm-3 col-xs-4"></div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
